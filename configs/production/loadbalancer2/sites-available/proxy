# -*- text -*-
##
## proxy -- proxy requests to backend RADIUS servers
##

server proxy {
    listen {
        type = auth
        ipaddr = 172.20.0.100  # Bind to Virtual IP for failover access
        port = 1812
    }

    listen {
        type = acct
        ipaddr = 172.20.0.100  # Bind to Virtual IP for failover access
        port = 1813
    }

    authorize {
        preprocess
        realm
    }

    authenticate {
        # Authentication is handled by backend servers
    }

    pre-proxy {
        # Pre-proxy processing
    }

    post-proxy {
        # Post-proxy processing
    }
}
