sql gpon_sql {
	dialect = "mysql"
	driver = "rlm_sql_mysql"
	mysql {
		warnings = auto
	}

	server = "10.62.167.245"
	port = 3306
	login = "appserver"
#	login = "gpon_user"
	password = "password123"
#	password = "gpon_password"
	radius_db = "WIFISYS"
#	radius_db = "gpon_radius"
	postauth_table = "GPON_POST_AUTH"
	session_table = "GPON_SESSION"
	authcheck_table = "GPON_CHECK"
	groupcheck_table = "radgroupcheck"
	authreply_table = "GPON_REPLY"
	groupreply_table = "radgroupreply"
	usergroup_table = "radusergroup"
	delete_stale_sessions = yes
	pool {
		start = ${thread[pool].start_servers}
		min = ${thread[pool].min_spare_servers}
		max = ${thread[pool].max_servers}
		spare = ${thread[pool].max_spare_servers}
		uses = 0
		retry_delay = 30
		lifetime = 0
		idle_timeout = 60
		max_retries = 5
	}
	client_table = "nas"
	group_attribute = "SQL-Group"
	$INCLUDE ${modconfdir}/${.:name}/main/${dialect}/gpon_queries.conf
}


