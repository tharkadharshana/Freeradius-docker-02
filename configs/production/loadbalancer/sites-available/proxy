# -*- text -*-
##
## proxy -- proxy requests to backend RADIUS servers
##

server proxy {
    listen {
        type = auth
        ipaddr = 0.0.0.0  # Bind to all interfaces for internal access
        port = 1812
    }

    listen {
        type = acct
        ipaddr = 0.0.0.0  # Bind to all interfaces for internal access
        port = 1813
    }

    authorize {
        preprocess
        suffix
    }

    authenticate {
        # Authentication is handled by backend servers
    }

    pre-proxy {
        # Pre-proxy processing
    }

    post-proxy {
        # Post-proxy processing
    }
} 